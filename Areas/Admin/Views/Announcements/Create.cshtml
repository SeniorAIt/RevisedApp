@model WorkbookManagement.Models.Announcement
@{
    ViewData["Title"] = "Create Announcement";
}
<h2 class="mb-3">Create Announcement</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="card shadow-sm border-0 p-3">
    @Html.AntiForgeryToken()

    <partial name="_Form" model="Model" />

    <div class="mb-3">
        <label class="form-label" for="attachment">Attachment (optional)</label>
        <input type="file"
               id="attachment"
               name="attachment"
               class="form-control"
               accept=".pdf,.docx,.xlsx,.pptx,.png,.jpg,.jpeg" />
        <div class="form-text">
            Allowed: PDF, DOCX, XLSX, PPTX, PNG, JPG. Max 50&nbsp;MB.
        </div>
    </div>

    <div class="mt-2 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
