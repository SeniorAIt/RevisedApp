@model WorkbookManagement.Models.CalendarEvent
@{
    var companies = (IEnumerable<WorkbookManagement.Models.Company>)ViewBag.Companies;
}
<!-- Show any validation errors -->
<div asp-validation-summary="All" class="text-danger mb-2"></div>

<div class="row g-3">
    <div class="col-md-8">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Category (optional)</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="col-md-12">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" rows="4" class="form-control"></textarea>
    </div>
    <div class="col-md-4">
        <label class="form-label">Company (optional)</label>
        <select asp-for="CompanyId" class="form-select">
            <option value="">All companies (global)</option>
            @foreach (var c in companies)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
        <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label class="form-label">All day?</label>
        <select asp-for="AllDay" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Start (UTC)</label>
        <input asp-for="StartUtc" type="datetime-local" class="form-control"
               value="@(Model.StartUtc == default ? "" : Model.StartUtc.ToString("yyyy-MM-ddTHH:mm"))" />
        <span asp-validation-for="StartUtc" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">End (UTC, optional)</label>
        <input asp-for="EndUtc" type="datetime-local" class="form-control"
               value="@(Model.EndUtc.HasValue? Model.EndUtc.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
        <span asp-validation-for="EndUtc" class="text-danger"></span>
    </div>
</div>
