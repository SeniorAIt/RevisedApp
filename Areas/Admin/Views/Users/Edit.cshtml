@model WorkbookManagement.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit User";
    var companies = ViewBag.Companies as List<WorkbookManagement.Models.Company> ?? new();
}

<h2 class="mb-3">Edit User</h2>

<form asp-area="Admin" asp-controller="Users" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input class="form-control" value="@Model.Email" readonly />
        </div>
        <div class="col-md-6">
            <label class="form-label">Company</label>
            <select class="form-select" asp-for="CompanyId">
                <option value="">-- none --</option>
                @foreach (var c in companies)
                {
                    <option value="@c.Id" selected="@(Model.CompanyId == c.Id)">
                        @c.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-6 d-flex align-items-center">
            <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActiveChk" />
                <label class="form-check-label" for="IsActiveChk">Active</label>
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <a class="btn btn-secondary btn-sm" asp-area="Admin" asp-controller="Users" asp-action="Index">Back</a>
        <button class="btn btn-primary btn-sm" type="submit">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
