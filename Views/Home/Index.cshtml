@{
    ViewData["Title"] = "Welcome";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .welcome-hero {
            min-height: calc(100vh - 140px);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .welcome-card {
            border: 1px solid #bfbfbf;
            border-radius: 14px;
            background: #fff;
            padding: 28px 28px;
            max-width: 920px;
            margin: 0 auto;
            text-align: center;
            box-shadow: 0 2px 10px rgba(0,0,0,.03);
        }

        .welcome-logo {
            max-height: 90px; /* keeps the header compact; enlarge if you prefer */
            width: auto;
            object-fit: contain;
        }

        .lead-tight {
            font-size: 1.05rem;
            color: #495057;
        }
    </style>
}

<div class="container welcome-hero">
    <div class="welcome-card">
        <div class="mb-3">
            <!-- Uses your provided file name -->
            <img src="~/images/Final-Logo-v3.png"
                 asp-append-version="true"
                 alt="APPETD — Association of Private Providers of Education, Training and Development"
                 class="welcome-logo" />
        </div>

        <h1 class="display-6 mb-2">Welcome to the <span class="text-primary">APPETD Gold Standard</span></h1>

        <p class="lead-tight mb-1">Dashboard is currently under construction.</p>
        <p class="lead-tight">Please click on the <strong>Workbooks</strong> tab to start completing the workbooks.</p>

        <div class="mt-3">
            <a class="btn btn-primary btn-lg" href="/Workbooks/Index">Go to Workbooks</a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- No page scripts required -->
}
